[
	{
		"id": "preferences",
		"children":
		[
			{
				"id": "package-settings",
				"children":
				[
					{
						"id": "assistantai-menu-settings",
						"caption": "AssistantAI",
						"children":
						[
							{
								"caption": "Settings",
								"command": "edit_settings",
								"args":
								{
									"base_file": "${packages}/AssistantAI/assistant_ai.sublime-settings",
									"default": "{\n\t$0\n}\n"
								}
							},
							{
								"caption": "Key Bindings",
								"command": "edit_settings",
								"args": {
									"base_file": "${packages}/AssistantAI/Default.sublime-keymap",
									"user_file": "${packages}/User/Default (${platform}).sublime-keymap",
									"default": "[\n\t$0\n]\n",
								}
							},
							{
								"caption": "-",
								"id": "separator"
							},
							{
								"caption": "OpenAI Server Settings",
								"command": "edit_settings",
								"args":
								{
									"base_file": "${packages}/AssistantAI/assistant_ai_openai.sublime-settings",
									"default": "// Add your 'credentials', 'prompts' and 'servers' here\n// WARNING: don't overwrite 'default_servers' or 'default_prompts' unless you know it's implications\n{\n\t\"credentials\": {\n\t\t// \"server_id\": {\n\t\t// \t\"credential_id\": \"...\"\n\t\t// }\n\t},\n\t// imported or created prompts specifications\n\t\"prompts\": [],\n\t// imported or created server specifications\n\t\"severs\": []\n}\n"
								}
							},
							{
								"caption": "Gitea Server Settings",
								"command": "edit_settings",
								"args":
								{
									"base_file": "${packages}/AssistantAI/assistant_ai_gitea.sublime-settings",
									"default": "// Add your 'credentials', 'prompts' and 'servers' here\n// WARNING: don't overwrite 'default_servers' or 'default_prompts' unless you know it's implications\n{\n\t\"credentials\": {\n\t\t// \"server_id\": {\n\t\t// \t\"credential_id\": \"...\"\n\t\t// }\n\t},\n\t// imported or created prompts specifications\n\t\"prompts\": [],\n\t// imported or created server specifications\n\t\"severs\": []\n}\n"
								}
							},
							{
								"caption": "-",
								"id": "separator"
							},
							{
								"caption": "Python Prompts",
								"command": "edit_settings",
								"args":
								{
									"base_file": "${packages}/AssistantAI/assistant_ai_python.sublime-settings",
									"default": "// Add your 'prompts' here\n// WARNING: don't overwrite 'default_prompts' unless you know it's implications\n{\n\t// imported or created prompts specifications\n\t\"prompts\": [\n\t\t// create a new prompt by importing a defined one\n\t]\n}\n"
								}
							}
						]
					}
				]
			}
		]
	}
]
